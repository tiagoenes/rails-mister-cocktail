<div class="container-fluid list-cocktails">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4 cocktail-item">
      <%= link_to new_cocktail_path, :data => {:"toggle"=> "modal",:"target"=> "#staticBackdrop"} do%>
      <!-- <a href="cocktails/new" data-toggle="modal" data-target="#staticBackdrop"> -->
        <div class="card-category" style="background-position: center;background-color:#bfbfbf">
        <i class="fas fa-plus-circle icon-add"></i> Add a new Cocktail
      </div>
      <!-- </a> -->
      <% end %>
    </div>
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-4 cocktail-item">
      <%= link_to cocktail_path(cocktail) do %>
      <div class="card-category" style="background-position: center;background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill  %>)">
        <%= cocktail.name.capitalize()  %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<%= render 'shared/modal-cocktail',cocktail: @new_cocktail %>
